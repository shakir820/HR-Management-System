@page
@model HR_Management_System.Pages.EmployeePages.Leave_ApplicationModel
@{
    ViewData["Title"] = "Leave_Application";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System




<center><h2>Leave Application</h2></center>

<div class="card shadow">
    <div class="card-header d-flex justify-content-between">
        <h5><a asp-page="./New_leave">+ Apply new Leave Application</a></h5>
        <h5> <a asp-page="./Remain_leave">See Remaining Days</a></h5>
    </div>

    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>SL</th>
                    <th>Leave Category</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Total Days</th>
                    <th>Reason</th>
                    <th>Status</th>
                </tr>
            </thead>



            <tbody>

                @if (Model.LeaveApplications != null)
                {
                    if (Model.LeaveApplications.Count > 0)
                    {
                        for (int i = 0; i < Model.LeaveApplications.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.LeaveApplications[i].LeaveCategory.Title</td>
                                <td>@Model.LeaveApplications[i].StartDate.Date</td>
                                <td>@Model.LeaveApplications[i].EndDate.Date</td>
                                <td>@Model.LeaveApplications[i].Days</td>
                                <td>@Model.LeaveApplications[i].Reason</td>
                                <td>@Model.LeaveApplications[i].Status</td>
                            </tr>
                        }
                    }
                }
            </tbody>


        </table>
    </div>
</div>
