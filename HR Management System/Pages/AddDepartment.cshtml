@page
@model HR_Management_System.Pages.AddDepartmentModel
@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
<body>
    <div class="container-fluid">


        <div class="row">
            <div class="col-sm-12">
                <div class="wrap-fpanel">
                    <div class="panel panel-default" data-collapsed="0">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <strong>Add Department</strong>
                            </div>
                        </div>
                        <div class="panel-body">

                            <form id="form_validation" action="http://localhost/HRMS-FRESH/admin/department/save_department/" method="post" class="form-horizontal form-groups-bordered" novalidate="novalidate">

                                <div class="form-group">
                                    <label for="field-1" class="col-sm-3 control-label">Add Department <span class="required" aria-required="true"> *</span></label>

                                    <div class="col-sm-5">
                                        <input type="text" name="department_name" value="" class="form-control" placeholder="Enter Your Department Name" required="" aria-required="true">
                                    </div>
                                </div>
                                <div id="add_new" class="margin">
                                    <div class="form-group">
                                        <label for="field-1" class="col-sm-3 control-label">Add Designations <span class="required" aria-required="true"> *</span></label>

                                        <div class="col-sm-5">
                                            <input type="text" name="designations[]" value="" class="form-control" placeholder="Enter Your Designations">
                                        </div>
                                        <div class="col-sm-2">
                                            <strong><a href="javascript:void(0);" id="add_more" class="addCF "><i class="fa fa-plus"></i>&nbsp;Add More</a></strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group margin">
                                    <div class="col-sm-offset-3 col-sm-5">
                                        <button type="submit" id="sbtn" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

