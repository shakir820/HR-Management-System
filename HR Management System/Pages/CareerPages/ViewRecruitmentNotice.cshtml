@page
@model HR_Management_System.Pages.CareerPages.ViewRecruitmentNoticeModel
@{
    ViewData["Title"] = "ViewRecruitmentNotice";
    Layout = "~/Views/Shared/_CareerLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<div class="container-fluid">
    <div class="wrap-fpanel">
        <div class="row">
            <div class="col-sm-12" data-offset="0">
                <div class="panel panel-default">



                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">@Model.RecruitmentNotice.Title</h6>
                        </div>
                        <div class="card-body">
                            @Model.RecruitmentNotice.Description
                        </div>
                        <br />
                        <div class="ml-4 text-gray-600">
                            <span>Department: </span> <span>@Model.RecruitmentNotice.Department</span>
                        </div>
                        <br />
                        <div class="ml-4 text-gray-600 card-subtitle">
                            <span>Designation: </span> <span>@Model.RecruitmentNotice.Designation</span>
                        </div>
                        <br />
                        <div class="ml-4 text-gray-600">
                            <span>No. of Vacancy: </span> <span>@Model.RecruitmentNotice.NumberOfVacancy</span>
                        </div>
                        <div class="card-body text-danger">
                            <span>Last Date: </span> <span>@Model.RecruitmentNotice.LastDate.ToShortDateString()</span>
                        </div>
                        <div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>