@page
@model HR_Management_System.Pages.Make_a_cvModel
@{
    ViewData["Title"] = "Make_a_cv";
    Layout = "~/Views/Shared/_CareerLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System

<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<form method="post" enctype="multipart/form-data">
    <div class="card shadow mb-4">

        <div class="card-header">
            <h5 class="m-0 font-weight-bold text-primary float-left">Create CV</h5>
            <button class="btn btn-primary float-right" type="submit">Create</button>
        </div>


        <div class="card-body">
            
            <div>
                <h5 class="text-gray-900">Personal Details</h5>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">First Name <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" class="form-control" name="first_name" placeholder="Shakir">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Last Name <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="last_name" class="form-control" placeholder="Enter Last Name">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Father Name <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="father_name" class="form-control" placeholder="Enter Father Name">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Mother Name <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="mother_name" class="form-control" placeholder="Enter Mother Name">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Present Address <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <textarea class="form-control" name="present_address" placeholder="Enter Present Address" style="max-height:150px;"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Permanent Address<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <textarea class="form-control" name="permanent_address" placeholder="Enter Permanent Address" style="max-height:150px;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="d-flex justify-content-center">
                        <img id="CVProfileImg" src="~/img/user.png" alt="Alternate Text" class="img-profile rounded-circle shadow" style="border:solid white 3px;" width="150" height="150" />
                    </div>
                    <div class="mt-4 d-flex justify-content-center">
                        <button style="width:130px;" type="button" class="btn btn-primary" onclick="openDialog()">Upload</button>
                        <input type="file" name="profile_img" onchange="CVPhotoFileOnChanged(this)" id="UploadPhotoInput" hidden accept=".png,.jpg" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">Phone Number <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input type="text" class="form-control" name="phone_number" placeholder="Enter Phone Number">
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">Mobile Number <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input type="text" class="form-control" name="mobile_number" placeholder="Enter Mobile Number">
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">Date of Birth <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input id="datepicker" width="276" name="date_of_birth" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4 mt-auto">
                    <div class="form-group">
                        <select class="form-control" name="gender">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="col-4 mt-auto">
                    <div class="form-group">
                        <select class="form-control" name="marritual_status">
                            <option value="">Select Marritual Status</option>
                            <option value="Married">Maried</option>
                            <option value="Unmarried">Unmarried</option>
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">National ID Card <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input type="text" name="national_id" class="form-control" placeholder="Enter National ID Card">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4 mt-auto">
                    <div class="form-group">
                        <select class="form-control" name="religion">
                            <option value="">Select Religion</option>
                            <option value="Islam">Islam</option>
                            <option value="Hindu">Hindu</option>
                            <option value="Christian">Christian</option>
                            <option value="Buddha">Buddha</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">Nationality <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input type="text" name="nationality" class="form-control" placeholder="Enter Your Nationality">
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="field-1" class="control-label">Personal Email <span class="required" aria-required="true">*</span></label>
                        <div>
                            <input type="text" name="email" class="form-control" placeholder="Enter Email Address">
                        </div>
                    </div>
                </div>
              
                <div class="form-group col-4">
                    <label class="control-label">Title <span class="required" aria-required="true">*</span></label>
                    <div>
                        <input type="text" class="form-control" name="title" placeholder="Designer and Developer">
                    </div>
                </div>
            </div>

            <div class="d-flex flex-row mt-4">
                <h5 class="text-gray-900 d-flex align-items-center">Educational Details</h5>
                <a style="color:darkblue; cursor:pointer;" onclick="AddMoreEducationDetailsRow()" class="d-flex align-items-center mb-2 ml-4">+ Add More</a>
            </div>

            <table class="table" id="EducationDetailsTable" width="100%" cellspacing="0">

                <tbody>
                    <tr>
                        <td>
                            <div class="mt-auto">
                                1
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Qualification<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="qualification[]" class="form-control" placeholder="Enter Qualification">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Passing Year<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="passing_year[]" class="form-control" placeholder="Enter Passing Year">
                                </div>

                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Subject <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="subject[]" class="form-control" placeholder="Enter Subject">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Grade/Result <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="grade[]" class="form-control" placeholder="Enter Grade">
                                </div>

                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Institute/University <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="university[]" class="form-control" placeholder="Enter Institute">
                                </div>

                            </div>
                            @*<div>
                                    <button class="btn btn-danger" onclick="RemoveEducationDetailsRow(this)" style="margin-top:30px;">Remove</button>
                                </div>*@
                        </td>
                    </tr>
                </tbody>
            </table>


            <div class="d-flex flex-row mt-4">
                <h5 class="text-gray-900 d-flex align-items-center">Professional Experience</h5>
                <a onclick="AddMoreExperienceDetailsRow()" class="d-flex align-items-center mb-2 ml-4" style="color:darkblue;cursor:pointer;">+ Add More</a>
            </div>

            <table class="table" id="ExperienceDetailsTable" width="100%" cellspacing="0">

                <tbody>
                    <tr>
                        <td>
                            <div class="mt-auto">
                                1
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Company Name<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="company_name[]" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Duration(From)<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="date" name="duration_from[]" class="form-control" />
                                </div>

                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Company Address <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="company_address[]" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Duration(to)<span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="date" name="duration_to[]" class="form-control" />
                                </div>

                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label class="control-label">Role/Responsibility <span class="required" aria-required="true">*</span></label>
                                <div>
                                    <input type="text" name="role[]" class="form-control">
                                </div>

                            </div>
                            @*<div>
                                    <button class="btn btn-danger" onclick="RemoveExperienceDetailsRow(this)" style="margin-top:30px;">Remove</button>
                                </div>*@
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


    </div>
</form>




<script type="text/javascript">
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });



</script>



