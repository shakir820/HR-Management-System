@page
@model HR_Management_System.Pages.AdminPages.Payroll.ViewSalaryDetailsModel
@{
    ViewData["Title"] = "ViewSalaryDetails";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System


<center><h2>View Salary Details</h2></center>

<div class="card shadow mb-4">

    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h3>@Model.Employee.Name</h3>
            <div>
                <img src="@Model.ImgSrc(Model.Employee.ProfileImage)" class="shadow img-profile rounded-circle" style="border:solid white 4px; object-fit:cover;" alt="Alternate Text" width="150" height="150" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center" >
            <h3 class="d-flex align-items-center">Salary Details </h3>
            <a class="ml-4 d-flex align-items-center"  asp-page="./EditSalary" asp-route-id="@Model.Employee.Salary.Id">Edit</a>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-3">
                <div class="d-flex flex-column">
                    <p>Summery</p>
                    <div>
                        <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.NetSalary</h4>
                        <p>Net Salary</p>
                    </div>
                    <div>
                        <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.GrossSalary</h4>
                        <p>Gross Salary</p>
                    </div>
                    <div class="text-danger">
                        <h4 class="font-weight-bold text-black-50"><span class="text-danger">$@Model.Employee.Salary.TotalDeduction</span></h4>
                        <p>Total Deduction</p>
                    </div>
                </div>
                <hr />
            </div>

            <div class="col-lg-9">
                <p>Details</p>
                <div class="d-flex flex-row">
                    <div>
                        <div>
                            <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.BasicSalary</h4>
                            <p>Basic Salary</p>
                        </div>
                        <div>
                            <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.HouseRent</h4>
                            <p>House Rent</p>
                        </div>
                        <div>
                            <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.MedicalBill</h4>
                            <p>Medical Bill</p>
                        </div>
                        <div>
                            <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.MobileBill</h4>
                            <p>Mobile Bill</p>
                        </div>
                        <div>
                            <h4 class="font-weight-bold text-black-50">$@Model.Employee.Salary.Other</h4>
                            <p>Other Salary</p>
                        </div>
                    </div>
                    <div class="ml-4">
                        <div class="text-danger">
                            <h4 class="font-weight-bold text-black-50"><span class="text-danger">$@Model.Employee.Salary.ProvidentFundDeduction</span></h4>
                            <p>Provident Fund Deduction</p>
                        </div>
                        <div class="text-danger">
                            <h4 class="font-weight-bold text-black-50"><span class="text-danger">$@Model.Employee.Salary.TaxDeduction</span></h4>
                            <p>Tax Deduction</p>
                        </div>
                        <div class="text-danger">
                            <h4 class="font-weight-bold text-black-50"><span class="text-danger">$@Model.Employee.Salary.OtherDeduction</span></h4>
                            <p>Other Deduction</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>