@page
@model HR_Management_System.Pages.AddDepartmentModel
@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<center><h1>Add Department</h1></center>

<div class="container-fluid">


    <div class="row">
        <div class="col-sm-12">
            <div class="wrap-fpanel">
                <div class="panel panel-default" data-collapsed="0">
                    <div class="panel-heading">
                        @*<div class="panel-title">
                            <strong>Add Department</strong>
                        </div>*@
                    </div>
                    <div class="panel-body">

                        <form id="form_validation" method="post" class="form-horizontal form-groups-bordered" novalidate="novalidate">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="department_name" class="col-sm-3 control-label"><span class="required" aria-required="true"> Department Name</span></label>

                                <div class="col-sm-5">
                                    <input type="text" asp-for="department_name" name="department_name" class="form-control" placeholder="Enter Your Department Name" required="" aria-required="true">
                                </div>
                            </div>

                            <div id="add_new" class="margin">
                                <div class="form-group">
                                    <label for="field-1" class="col-sm-3 control-label">Add Designations <span class="required" aria-required="true"> *</span></label>

                                    <div class="col-sm-5">
                                        <input type="text" name="designations[]" value="" class="form-control" placeholder="Enter Your Designations">
                                    </div>
                                    <div class="col-sm-2">
                                        <strong><a href="javascript:void(0);" id="add_more" onclick="addMoreDesignationField()" class="addCF "><i class="fa fa-plus"></i>&nbsp;Add More</a></strong>
                                    </div>
                                </div>

                                <div id="DesignationContainer">
                                    @*<div class="form-group" id="designation2">
                                            <label class="col-sm-3 control-label">Add Designations <span class="required" aria-required="true"> *</span></label>

                                            <div class="col-sm-5">
                                                <input type="text" name="designations[]"  class="form-control" placeholder="Enter Your Designations">
                                            </div>
                                            <div class="col-sm-2">
                                                   <strong><a href="javascript:void(0);" onclick="RemoveDesignationFromForm(designation2)" class="remCF"><i class="fa fa-times"></i>&nbsp;Remove</a></strong>
                                            </div>
                                        </div>*@
                                </div>
                            </div>
                            <div class="form-group margin">
                                <div class="col-sm-offset-3 col-sm-5">
                                    <button type="submit" id="sbtn" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





