@page
@model HR_Management_System.Pages.EmployeeListModel
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System

<center><h1>Employee List</h1></center>



<div class="wrap-fpanel">
    <div class="row">
        <div class="col-sm-12" data-offset="0">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong>List of All Employee</strong>
                    </div>
                </div>





                <div class="card shadow mb-4">

                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div id="dataTable_filter" class="dataTables_filter ml-4 mt-4">
                                <form method="get">
                                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="Search by Name" aria-controls="dataTable" name="src_string"></label>
                                    <span><button class="btn btn-primary form-control-sm" type="submit">Search</button></span>
                                </form>

                            </div>
                        </div>
                    </div>


                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>Status</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                @if (Model.Employees != null)
                                {
                                    if (Model.Employees.Count > 0)
                                    {
                                        @if (Model.Employees.Count > 10)
                                        {
                                            <tfoot>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Department</th>
                                                    <th>Designation</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        }

                                        <tbody>

                                            @for (int i = 0; i < Model.Employees.Count; i++)
                                            {
                                                <tr>
                                                    <td>@Model.Employees[i].Id</td>
                                                    <td>@Model.Employees[i].Name</td>
                                                    <td>@Model.Employees[i].Department</td>
                                                    <td>@Model.Employees[i].Designation</td>
                                                    <td>@Model.IsActive(Model.Employees[i].Status)</td>

                                                    <td>
                                                        <div class="row">
                                                            <div class="col-6"><a asp-page="./ViewEmployeeDetails" asp-route-id="@Model.Employees[i].Id"><span class="fa fa-list-alt Edit-HyperLink"></span></a></div>
                                                          
                                                            <div class="col-6"><employee-is-active is-active="@Model.Employees[i].Status" id="@Model.Employees[i].Id"></employee-is-active></div>
                                                            
                                                        </div>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>

                @*<div class="d-flex justify-content-center mt-lg-5">
                        <div>
                            <div class="panel-heading">
                                <div class="panel-title">
                                    <strong class="h2 font-weight-normal">Empty</strong>
                                </div>
                            </div>
                        </div>

                    </div>*@

            </div>
        </div>
    </div>
</div>