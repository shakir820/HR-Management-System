@page "{id:long}"
@model HR_Management_System.Pages.AdminPages.Notice.EditNoticeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditNotice";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}


<h1>EditNotice</h1>


<div class="container-fluid">


    <div class="row">
        <div class="col-sm-12">
            <div class="wrap-fpanel">
                <div class="panel panel-default" data-collapsed="0">
                    <div class="panel-heading">
                        @*<div class="panel-title">
                                <strong>Create Notice</strong>
                            </div>*@
                    </div>
                    <div class="panel-body">

                        <form role="form" id="form" method="post" class="form-horizontal form-groups-bordered">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="date" asp-for="@Model.Notice.CreatedDate" hidden />
                            <input type="text" asp-for="@Model.Notice.Id" hidden />
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Publication Status <span class="required" aria-required="true">*</span></label>

                                <div class="col-sm-2"><input type="checkbox" class="select_one" asp-for="Notice.Published"> Published</div>
                                <span asp-validation-for="Notice.Published" class="text-danger"></span>

                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Title <span class="required" aria-required="true">*</span></label>

                                <div class="col-sm-8">
                                    <input type="text" asp-for="Notice.Title" class="form-control" placeholder="Enter Notice Title Here">
                                    <span asp-validation-for="Notice.Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Description <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" style=" width: 100%; height: 500px" asp-for="Notice.Description"></textarea>
                                    <span asp-validation-for="Notice.Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-5">
                                    <button type="submit" id="sbtn" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
