@page
@model HR_Management_System.Pages.ManageNoticeModel
@{
    ViewData["Title"] = "ManageNotice";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<center><h1>Manage Notice</h1></center>

<div class="container-fluid">
    <div class="wrap-fpanel">
        <div class="row">
            <div class="col-sm-12" data-offset="0">
                <div class="panel panel-default">
                   

                    <div class="card shadow mb-4">

                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div id="dataTable_filter" class="dataTables_filter ml-4 mt-4">
                                    <form method="get">
                                        <label>Search:<input type="search" class="form-control form-control-sm" placeholder="Search by Title" aria-controls="dataTable" name="src_string"></label>
                                        <span><button class="btn btn-primary form-control-sm" type="submit">Search</button></span>
                                    </form>

                                </div>
                            </div>
                        </div>


                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr role="row">
                                            <th >SL</th>
                                            <th >Created Date</th>
                                            <th >Title</th>
                                            <th >Status</th>
                                            <th >Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Notices != null)
                                        {
                                            if (Model.Notices.Count > 0)
                                            {
                                                for (int i = 0; i < Model.Notices.Count; i++)
                                                {
                                                    <tr class="odd">
                                                        <td class="sorting_1">@(i + 1)</td>
                                                        <td >@Model.Notices[i].CreatedDate</td>
                                                        <td >@Model.Notices[i].Title</td>
                                                        <td >
                                                            <span class="label label-success">@Model.IsPublished(Model.Notices[i].Published)</span>
                                                        </td>
                                                        <td >
                                                            <div class="row">
                                                                <div class="col-4">
                                                                    <a asp-page-handler="ViewNotice" asp-route-id="@Model.Notices[i].Id"><span class="fa fa-list-alt"></span></a>
                                                                </div>
                                                                <div class="col-4">
                                                                    <a asp-page="EditNotice" asp-route-id="@Model.Notices[i].Id"><span class="oi Edit-HyperLink" data-glyph="pencil"></span></a>
                                                                </div>
                                                                <div class="col-4">
                                                                    <a asp-page-handler="Delete" asp-route-id="@Model.Notices[i].Id" onclick="return confirm('You are about to delete a record. This cannot be undone. Are you sure?');"><span class="oi Delete-HyperLink" data-glyph="trash"></span></a>
                                                                </div>
                                                            </div>
                                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
</div>