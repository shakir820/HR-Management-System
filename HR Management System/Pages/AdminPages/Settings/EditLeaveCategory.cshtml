@page
@model HR_Management_System.Pages.AdminPages.Settings.EditLeaveCategoryModel
@{
    ViewData["Title"] = "EditLeaveCategory";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System



<center><h1>Edit Leave Category</h1></center>

<div class="container-fluid">


    <div class="row">
        <div class="col-sm-12">
            <div class="wrap-fpanel">
                <div class="panel panel-default" data-collapsed="0">
                    
                    <div class="panel-body">

                        <form  method="post" class="form-horizontal form-groups-bordered">
                           
                            <input type="text" hidden asp-for="LeaveCategory.Id" />
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Leave Category Name <span class="required" aria-required="true">*</span></label>

                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Enter category name" asp-for="LeaveCategory.Title">
                                    <span asp-validation-for="LeaveCategory.Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Days <span class="required" aria-required="true">*</span></label>

                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Enter days count" asp-for="LeaveCategory.Days">
                                    <span asp-validation-for="LeaveCategory.Days" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-5">
                                    <button type="submit" id="sbtn" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


