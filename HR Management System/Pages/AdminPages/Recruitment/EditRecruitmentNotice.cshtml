@page
@model HR_Management_System.Pages.AdminPages.Recruitment.EditRecruitmentNoticeModel
@{
    ViewData["Title"] = "EditRecruitmentNotice";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, HR Management System



<center><h1>Edit Recruitment Notice</h1></center>


<div class="container-fluid">


    <div class="row">
        <div class="col-sm-12">
            <div class="wrap-fpanel">
                <div class="panel panel-default" data-collapsed="0">



                    <div class="panel-body">
                        <form role="form" id="form" method="post" class="form-horizontal form-groups-bordered">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Publication Status <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-2"><input type="checkbox" asp-for="Published" class="select_one"> Published</div>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Title <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title Here">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Department <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-5">
                                    <select id="department" class="form-control" asp-items="@Model.DepartmentList" asp-for="Department" onchange="GetDesignations(this)">
                                        <option value="">Select Department</option>
                                    </select>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Designation <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-5">
                                    <select id="designationSelectList" class="form-control" asp-for="Designation" asp-items="@Model.DesignationList">
                                        <option value="">Select Designation</option>
                                    </select>
                                    <span asp-validation-for="Designation" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Number of Vacancy<span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="NumberOfVacancy" class="form-control" placeholder="Enter Number of Vacancy Here">
                                    <span asp-validation-for="NumberOfVacancy" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Last Date <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control" asp-for="EndDate">
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Description <span class="required" aria-required="true">*</span></label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" asp-for="Description" style=" width: 100%; height: 200px"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-5">
                                    <button type="submit" id="sbtn" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>



                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
